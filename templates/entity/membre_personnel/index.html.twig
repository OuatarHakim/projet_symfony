{% extends 'entity/base_index.html.twig' %}


{% block tabEntity %}
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Role</th>
            <th>Equipe</th>
        </tr>
    </thead>
    <tbody>
    {% for mp in membres_personnels %}
        <tr>
            <td>{{ mp.nom }}</td>
            <td>{{ mp.prenom }} </td>
            <td>{{ mp.role }}</td>
            <td>{{ mp.equipe.idequipe }}</td>
            <td>
                <a class="btn btn-primary" href="{{ path(routes['update'],{id :mp.idmemper}) }}" role="button">Modifier</a>
                <a class="btn btn-primary" href="{{path(routes['delete'],{id:mp.idmemper}) }}" role="button">Supprimer</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
{% endblock %}

{% block actionEntity %}
    <div class="text-center">
        <span class="text-center">Nombre de membres personnels : {{ sum }}</span>
        <a class="btn btn-primary ml-3 mb-3" href="{{ path(routes['insert']) }}" role="button">Cr√©er un membre personnel</a>
    </div>
{% endblock %}
