{% extends 'entity/base_index.html.twig' %}


{% block tabEntity %}
    <thead>
        <tr>
            <th>Équipe id</th>
            <th>Nationalité</th>
            <th>Nombre de victoires</th>
            <th>Nombre de defaites</th>
        </tr>
    </thead>
    <tbody>
    {% for equ in equipes %}
        <tr>
            <td>{{ equ.idequipe }}</td>
            <td>{{ equ.natequipe }} </td>
            <td>{{ equ.nbrvictoire }}</td>
            <td>{{ equ.nbrdefaite }}</td>
            <td>
                <a class="btn btn-primary" href="{{ path(routes['update'],{id :equ.idequipe}) }}" role="button">Modifier</a>
                <a class="btn btn-primary" href="{{path(routes['delete'],{id:equ.idequipe}) }}" role="button">Supprimer</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
{% endblock %}

{% block actionEntity %}
    <div class="text-center">
        <span class="text-center">Nombre d'équipes : {{ sum }}</span>
        <a class="btn btn-primary ml-3 mb-3" href="{{ path(routes['insert']) }}" role="button">Créer une équipe</a>
    </div>
{% endblock %}