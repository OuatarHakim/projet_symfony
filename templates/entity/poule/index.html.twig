{% extends 'entity/base_index.html.twig' %}


{% block tabEntity %}
    <thead>
    <tr>
        <th>Poule Id</th>
        <th>Phase de Poule</th>
    </tr>
    </thead>
    <tbody>
    {% for p in poules %}
        <tr>
            <td>{{ p.idpoule }}</td>
            <td>{{ p.phase }} </td>
            <td>
                <a class="btn btn-primary" href="{{ path(routes['update'],{id :p.idpoule}) }}" role="button">Modifier</a>
                <a class="btn btn-primary" href="{{path(routes['delete'],{id:p.idpoule}) }}" role="button">Supprimer</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
{% endblock %}

{% block actionEntity %}
    <div class="text-center">
        <span class="text-center">Nombre de poules : {{ sum }}</span>
        <a class="btn btn-primary ml-3 mb-3" href="{{ path(routes['insert']) }}" role="button">Cr√©er une Poule</a>
    </div>
{% endblock %}
